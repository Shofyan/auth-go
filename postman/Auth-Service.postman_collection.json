		{
			"name": "Login Admin",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    pm.environment.set(\"admin_access_token\", response.access_token);",
							"    pm.environment.set(\"admin_refresh_token\", response.refresh_token);",
							"}"
